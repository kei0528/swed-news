{
  "name": "common",
  "version": "1.0.0",
  "type": "module",
  "description": "Shared utilities and types for swed-news services",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./types/*": {
      "types": "./dist/types/*.d.ts",
      "default": "./dist/types/*.js"
    },
    "./utils/*": {
      "types": "./dist/utils/*.d.ts",
      "default": "./dist/utils/*.js"
    },
    "./database": {
      "types": "./database/index.ts",
      "default": "./database/index.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "prisma:generate": "prisma generate --schema=./database/prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema=./database/prisma/schema.prisma",
    "prisma:migrate:deploy": "prisma migrate deploy --schema=./database/prisma/schema.prisma",
    "prisma:studio": "prisma studio --schema=./database/prisma/schema.prisma",
    "prisma:push": "prisma db push --schema=./database/prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "prisma": "^5.22.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
